<%= form_for @training do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

<div class="field">

    <% if params[:id] == "4" %>
    <%= f.label :avalanche_route %>
    <% else %>
    <%= f.label :location %>
    <% end %>
    <%= f.text_field :location %>
    <%= f.label :trainer %>
    <%= f.text_field :trainer %>
    <%= f.label :training_hours %>
    <%= f.number_field(:training_time, in: 0.25..10.0, step: 0.25) %>
    <%= f.label :comments %>
    <%= f.text_field :comments %>
    <%= f.label :training_date %>
    <%= f.date_field :training_date %>
    <%= f.label :training_codes %>
    <%= f.select(:training_code) do %>
    <% [['5001 - Transceiver-Single Burial', 5001],['5002 - Transceiver-Multiple Burial', 5002], ['5100 - RECCO'], ['5101 - RECCO-Single Burial'], ['5102 - RECCO-Multiple Burial']].each do |c| %>
    <%= content_tag(:option, c.first, value: c.last) %>
    <% end %>
    <% end %>
    <%= render 'shared/training_codes' %>
<%= f.hidden_field :training_division_id, :value => params[:id] %>
  </div>
  <%= f.submit "Submit Training", class: "btn btn-primary", id: "submit_training" %>
  <% end %>
