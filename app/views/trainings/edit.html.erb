<% provide(:title, "Edit training") %>
<h1>Update training</h1>
<div class="container">
<div class="row">
  <div class"col-md-6 col-md-offset-3">
    <%= form_for(@training) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <% if @training.training_division_id == 4 %>
    <%= f.label :avalanche_route %>
    <%= f.select(:location) do %>
    <% @routes.each do |r| %>
    <%= content_tag(:option, r.first, value: r.last) %>
    <% end %>
    <% end %>
    <% else %>
    <%= f.label :location %>
    <%= f.text_field :location %>
    <% end %>
    <%= f.label :trainer %>
    <%= f.text_field :trainer %>
    <%= f.label :training_hours %>
    <%= f.number_field(:training_time, in: 0.25..10.0, step: 0.25) %>
    <%= f.label :comments %>
    <%= f.text_field :comments %>
    <%= f.label :training_date %>
    <%= f.date_field :training_date, id: "edit_training_date" %>
    <% unless params[:id] =="4" %>
    <%= f.fields_for :trainings_training_codes do |ff| %>
    <div id = "fields_container">
    <%= render 'shared/edit_training_codes', :f => ff %>
    <% end %>
    <%= submit_tag "Add More Training Codes", :type =>  "button", :class => "addCodesBtn", :onclick => 'addCodesField()'%>
    </div>
    <% end %>
</div>
    <%= f.submit "Save Changes", class: "btn btn-primary" %>
    <% end %>

</div>
</div>
